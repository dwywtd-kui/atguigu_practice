<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dwywtd.lease.business.mapper.FeeKeyMapper">

    <resultMap id="feeKeyVoMap" type="com.dwywtd.lease.business.vo.FeeKeyVo">
        <id column="id" property="id"/>
        <result column="key_name" property="name"/>
        <collection property="feeValueList" ofType="com.dwywtd.lease.business.domain.FeeValue">
            <id column="value_id" property="id"/>
            <result column="value_name" property="name"/>
            <result column="value_unit" property="unit"/>
            <result column="key_id" property="feeKeyId"/>
        </collection>
    </resultMap>


    <select id="getFeeKeyVoList" resultMap="feeKeyVoMap">
        select k.id, k.name key_name, v.id value_id, v.name value_name, v.unit value_unit, v.fee_key_id key_id
        from fee_key k
                 left join fee_value v on k.id = v.fee_key_id and v.is_deleted = 0
        where k.is_deleted = 0
    </select>

</mapper>